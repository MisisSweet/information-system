@model ManageUserRolesViewModel
@{
    ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage User Roles</h2>
            Add/Remove Roles for User / @ViewBag.UserName.
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.List.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model.List[i].RoleId" />
                    <input type="hidden" asp-for="@Model.List[i].RoleName" />
                    <input type="radio" asp-for="@Model.SelectedValue" value="@Model.List[i].RoleName" />
                    <label class="form-check-label">
                        @Model.List[i].RoleName
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary"
                   style="width:auto" />
            <button class="btn btn-primary" type="submit" asp-controller="UserRoles" asp-action="">Back</button>
        </div>
    </div>
</form>