@model List<ManageSpecialtyViewModel>
@{
    ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Изменить специальность</h2>
            Добавить/Удалить специальность для книги / @ViewBag.BookName.
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].SpecialtyId" />
                    <input type="hidden" asp-for="@Model[i].SpecialtyName" />
                    <input asp-for="@Model[i].Selected" class="form-check-input" />
                    <label class="form-check-label" asp-for="@Model[i].Selected">
                        @Model[i].SpecialtyName
                    </label>
                </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Обновить" class="btn btn-primary"
                   style="width:auto" />
            <button class="btn btn-primary" type="submit" asp-controller="UserRoles" asp-action="EditBook" asp-route-bookId="@ViewBag.bookId">Назад</button>
        </div>
    </div>
</form>