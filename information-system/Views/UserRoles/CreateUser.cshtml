@model CreateUserViewModel
<h1>Create User</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="UserRoles" >
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumderReadTicket"></label>
                <input asp-for="NumderReadTicket" class="form-control" />
                <span asp-validation-for="NumderReadTicket" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Role"></label>
                <select id="role" asp-for="Role"></select>
            </div>
            <button type="submit" class="btn btn-primary" asp-action="Create">Create</button>
        </form>
    </div>
</div>
<script src='@Url.Content("~/lib/jquery/dist/jquery.js")' type="text/javascript"></script>
<script>
    GetAllTypes();
    function GetAllTypes() {
        $.ajax({
            type: "Get",
            url: '@Url.Action("GetAllRole", "UserRoles")',
            success: function (data) {
                console.log(data);
                Object.keys(data).forEach((item, number, array) => {
                    $(`<option value="${item}">${item}</option>`).appendTo('#role');
                });
            }
        })
    }
</script>