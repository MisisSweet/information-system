@model ManageStatusViewModel
@{
    ViewData["Title"] = "Manage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form method="post">
    <div class="card">
        <div class="card-header">
            <h2>Manage Loan</h2>
            Add/Remove Loan for Book .
        </div>
        <div class="card-body">
            @for (int i = 0; i < Model.List.Count; i++)
            {
            <div class="form-check m-1">
                <input type="hidden" asp-for="@Model.List[i].Id" />
                <input type="hidden" asp-for="@Model.List[i].StatusName" />
                <input type="radio" value="@Model.List[i].StatusName" asp-for="@Model.SelectedValue" />
                <label class="form-check-label">
                    @Model.List[i].StatusName
                </label>
            </div>
            }
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <input type="submit" value="Update" class="btn btn-primary"
                   style="width:auto" />
            <button class="btn btn-primary" type="submit" asp-controller="UserRoles" asp-action="">Back</button>
        </div>
    </div>
</form>